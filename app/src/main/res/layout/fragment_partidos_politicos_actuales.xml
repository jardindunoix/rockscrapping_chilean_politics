<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blackboard1"
    android:orientation="vertical"
    android:padding="@dimen/padding_normal_4dp"
    tools:context=".a_ui.fragments.partidos_politicos.PartidosPoliticosActualesFragment">

    <LinearLayout
        android:id="@+id/linear_layout__"
        android:layout_width="match_parent"
        android:layout_height="@dimen/heigt_header_partidos_politicos"
        android:layout_marginBottom="@dimen/padding_normal_4dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="@dimen/margin_top_header_partidos_politicos">

        <TextView
            android:id="@+id/text_view_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_regular"
            android:padding="@dimen/padding_normal_4dp"
            android:text="@string/text_partidos_politicos"
            android:textColor="@color/orange"
            android:textSize="@dimen/text_size_32sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_normal_8dp"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_partidos_politicos"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>